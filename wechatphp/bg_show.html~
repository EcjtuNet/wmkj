<script language="javascript" type="text/javascript">
	$(document).ready(function(){
    	$(".rx_show").toggle(function() {
    		$(".rx_hidden").show(100);
   		},
   		function(){
   			$(".rx_hidden").hide(100);
   		}
   		);
   		$(".rx_show_art").toggle(function() {
    		$(".rx_hidden_art").show(100);
   		},
   		function(){
   			$(".rx_hidden_art").hide(100);
   		}
   		);
	});
</script>
